<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layoutStudy.ConstraintLayoutActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="this is edit view,what you see is hint"
        android:id="@+id/constraintLayoutEditText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showWhatInTextView"
        android:id="@+id/constraintLayoutButton"/>

    <TextView
        android:id="@+id/showConstraintTextViewWords"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:lines="2"
        android:ellipsize="end"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayoutImageView"
        android:src="@drawable/apple_pic"/>

    <ProgressBar
        android:id="@+id/constraintProgressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:max="100" />

    <ProgressBar
        android:id="@+id/constraintProgressBarHorizontal"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/constraintLinearLayout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/addProgress10"
            android:text="+10"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/addProgress20"
            android:text="+20"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintAlertDialog"
        android:text="Alert Dialog"/>






</LinearLayout>